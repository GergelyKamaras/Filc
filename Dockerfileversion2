# Build stage
FROM mcr.microsoft.com/dotnet/sdk:6.0-focal AS build
WORKDIR /core
COPY . .

WORKDIR /core/Filc
RUN dotnet restore "Filc.csproj" --disable-parallel
RUN dotnet publish "Filc.csproj" -c release -o /app --no-restore

# Serve stage
FROM mcr.microsoft.com/dotnet/sdk:6.0-focal
WORKDIR /app
COPY --from=build /app ./

EXPOSE 7014
EXPOSE 5014

RUN dotnet dev-certs https --trust
ENTRYPOINT ["dotnet", "Filc.dll"]