@model dynamic

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Government Page";
}

<div class="container">
    <form id="register_school">
        <label for="register_school_name">Last Name of school:</label>
        <input type="text" id="register_school_name" placeholder="Parkside High School" />
        <br />
        <label for="register_school_type">Select the type of school:</label>
        <select id="register_school_type">
            <option>Primary School</option>
            <option>Vocational School</option>
            <option>High School</option>
        </select>
        <br/>
        <label for="register_school_admin_email">Email of school admin:</label>
        <input type="email" id="register_school_admin_email" placeholder="example@example.com"/>
        <button type="submit">Add School</button>
    </form>
</div>